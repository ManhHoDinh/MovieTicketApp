<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieTicketApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textSize">14dp</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_background_2</item>
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:autofilledHighlight">@android:color/transparent</item>-->
<!--        <item name="popupMenuBackground">@drawable/menu_background</item>-->
<!--        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>-->
<!--        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>-->
        <item name="android:actionBarWidgetTheme">@style/PopupMenuTextView</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- Change Overflow Menu ListView Item Height & Property -->
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="android:listPreferredItemPaddingLeft">25dp</item>
        <item name="android:listPreferredItemPaddingRight">25dp</item>
    </style>
    <style name="Theme.MovieTicketApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>
    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="Theme.MovieProject.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="editTextColor">@color/white</item>
        <item name="fontFamily">@font/montserrat500</item>
        <item name="android:fontFamily">@font/montserrat500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_background_2</item>
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/teal_200</item>

    </style>
    <style name="Theme.MovieProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovieProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MovieTicketApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovieTicketApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="popupOverflowMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>
</resources>