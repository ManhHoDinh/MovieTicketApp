<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    android:id="@+id/SearchLayout"
    tools:context=".Activity.Movie.SearchActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchField"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="12dp"
        android:layout_width="0dp"
        app:closeIcon="@drawable/close_btn"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/closeBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_tabview_button"
        app:iconifiedByDefault="true"
        app:searchIcon="@drawable/search_icon"
        app:queryHint="Search movie"
        app:queryBackground="@android:color/transparent"/>
    <TextView
        android:id="@+id/closeBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat500"
        android:text="Cancel"/>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/searchField"
    android:paddingBottom="70dp"
    android:paddingTop="20dp"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listSearchResult"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>