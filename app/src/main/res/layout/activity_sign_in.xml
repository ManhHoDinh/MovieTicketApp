<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="@color/dark_background_1"
    tools:context=".SignInActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="-20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back,\nMovie Lover!"
            android:textSize="24dp"
            android:layout_marginBottom="24dp"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:textColor="@color/white_background"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="User Name"
            android:textSize="14dp"
            android:textColorHint="@color/white_background"
            android:background="@drawable/edittext_boder"
            android:layout_marginTop="2dp"
            android:textColor="@color/white_background"
            android:paddingLeft="24dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/UserID"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:textSize="14dp"
            android:textColorHint="@color/white_background"
            android:inputType="textPassword"
            android:background="@drawable/edittext_boder"
            android:layout_marginTop="12dp"
            android:textColor="@color/white_background"
            android:paddingLeft="24dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/PassID"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Forgot Password?"
            android:layout_marginTop="2dp"
            android:textColor="@color/white_background"
            android:textSize="12dp"
            android:id="@+id/ForgotPassword"
            />
        <Button
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Login"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background"
            android:textColor="@color/white_background"
            android:textSize="18dp"
            android:id="@+id/LoginBtn"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create new account? "
                android:textSize="14dp"
                android:textColor="@color/white_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sign up"
                android:textColor="@color/signup_color1"
                android:textSize="14dp"
                style="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/SignUpBtn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/media_google"
                android:id="@+id/googlelogin"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/media_facebook"
                android:layout_marginLeft="50dp"
                android:id="@+id/facebooklogin"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>