<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:layout_marginHorizontal="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgSearchResult"
            app:layout_constraintStart_toStartOf="parent"
            app:riv_corner_radius="8dp"
            android:layout_marginRight="12dp"
            android:layout_width="60dp"
            android:layout_height="100dp"/>
        <LinearLayout
          app:layout_constraintStart_toEndOf="@+id/imgSearchResult"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toStartOf="@+id/inforBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/montserrat600"
                android:id="@+id/nameFilm"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/grey_background_1"
                    android:id="@+id/timeShow"
                    android:fontFamily="@font/montserrat500"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView

                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/montserrat400"
                    android:textColor="@color/white"
                    android:textSize="12dp"

                    app:flow_verticalAlign="center"
                    android:id="@+id/filmStatus"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inforBtn"
            android:fontFamily="@font/montserrat400"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button"
            android:text="Book"
            android:textSize="12dp" />




</androidx.constraintlayout.widget.ConstraintLayout>