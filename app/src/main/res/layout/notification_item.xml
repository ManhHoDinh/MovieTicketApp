<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"
    >
    <ImageView
        android:id="@+id/ImageBackground"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/promo_background"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ImageBackground"
        app:layout_constraintBottom_toBottomOf="@id/ImageBackground"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        app:layout_goneMarginLeft="40dp"
        android:gravity="center|left"
        android:paddingBottom="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Heading"
                android:id="@+id/Heading"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textFontWeight="500"
                />
            <TextView
                android:id="@+id/PostTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="22:30- 8/6/2023"
                android:layout_marginRight="10dp"
                >
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:textFontWeight="300"
            />
        <TextView
            android:id="@+id/PostAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_opacity_70"
            android:text="By : Manh Ho Dinh"
            android:layout_marginTop="10dp"
            android:textSize="10dp"
            android:textFontWeight="300"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ImageView
        android:id="@+id/PromoMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/promo_edit"
        android:layout_marginBottom="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>