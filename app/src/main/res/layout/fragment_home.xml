                <androidx.constraintlayout.widget.ConstraintLayout

                    android:showDividers="middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="76dp"
                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="110dp">

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Find your Best Movie "
                        android:textColor="@color/white"
                        android:textSize="24dp" />


                    <ImageView
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_gravity="end"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/avatar" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/controlBtn"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/background_button"
                        app:iconifiedByDefault="false"
                        app:searchIcon="@drawable/search_icon"
                        app:queryHint="Search movie"
                        app:queryBackground="@android:color/transparent"/>
                    <ImageButton
                        android:background="@drawable/background_button"
                        android:id="@+id/controlBtn"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/control"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabViewTypeMove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="All"/>
                    <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Action"/>
                    <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Drama"/>

                </com.google.android.material.tabs.TabLayout>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/typeMovieViewPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
