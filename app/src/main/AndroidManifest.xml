<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieTicketApp"
        tools:targetApi="31">
        <activity
            android:name=".Activity.TopUpActivity"
            android:exported="true"
            android:theme="@style/Theme.MovieProject.Main">

        </activity>
        <activity
            android:name=".Activity.MyWalletActivity"
            android:exported="true"
            android:theme="@style/Theme.MovieProject.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.BookSeatActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieProject.Main" />
        <activity
            android:name=".Activity.BookedActivity"
            android:exported="true"
            android:theme="@style/Theme.MovieProject.Main"></activity>
        <activity
            android:name=".Activity.OnboardingActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".Activity.SplashActivity"
            android:exported="false"></activity>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.SignUpActivity" />
        <activity android:name=".Activity.SignInActivity" />
        <activity android:name=".Activity.HomeActivity" />
        <activity
            android:name=".Activity.ConfirmationProfileActivity"
            android:noHistory="true" />
        <activity android:name=".Activity.UserProflingActivity" />
    </application>

</manifest>